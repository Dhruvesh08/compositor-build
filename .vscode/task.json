{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format Nushell Script",
            "type": "shell",
            "command": "${workspaceFolder}/nu_formatter.sh",
            "args": ["${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
